{
  "compilerOptions": {
    "target": "ES5",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node16",
    "incremental": true,
    "isolatedModules": false,
    "strict": true,
    "jsx": "react",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./types",
    "noEmit": true,

    // Linting
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"]
}
